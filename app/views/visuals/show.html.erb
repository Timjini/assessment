<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @visual %>
    <div class="flex flex-col mx-auto">
        <% @comments.each do |comment|%>
      <%= render 'comments/comment', visual: @visual, comment: comment %>
    <% end %>
    <%= render 'comments/form', visual: @visual%>
    </div>

    <%= link_to 'Edit this visual', edit_visual_path(@visual), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this visual', visual_path(@visual), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to visuals', visuals_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
  